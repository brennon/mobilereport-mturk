<h1>Listing recordings</h1>

<table>
  <tr>
    <th>Gender</th>
    <th>Locale</th>
    <th>Soundfile file name</th>
    <th>Soundfile content type</th>
    <th>Soundfile updated at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recordings.each do |recording| %>
  <tr>
    <td><%= recording.gender %></td>
    <td><%= recording.locale %></td>
    <td><%= recording.soundfile_file_name %></td>
    <td><%= recording.soundfile_content_type %></td>
    <td><%= recording.soundfile_updated_at %></td>
    <td><%= link_to 'Show', recording %></td>
    <td><%= link_to 'Edit', edit_recording_path(recording) %></td>
    <td><%= link_to 'Destroy', recording, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

